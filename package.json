{
  "name": "athens-hdl-mcp",
  "version": "2.0.0",
  "description": "MCP server providing AI agents with efficient access to HDL Language Reference Manuals (Verilog, SystemVerilog, VHDL)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "athens-hdl-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "init-db": "node --loader ts-node/esm src/storage/init-db.ts",
    "parse": "npm run parse:verilog && npm run parse:systemverilog && npm run parse:vhdl",
    "parse:verilog": "python src/parser/parse_lrm.py --pdf data/lrms/LRM_V_2005.pdf --language verilog --output data/hdl-lrm.db",
    "parse:systemverilog": "python src/parser/parse_lrm.py --pdf data/lrms/LRM_SYSV_2017.pdf --language systemverilog --output data/hdl-lrm.db",
    "parse:vhdl": "python src/parser/parse_lrm.py --pdf data/lrms/LRM_VHDL_2008.pdf --language vhdl --output data/hdl-lrm.db",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:performance": "jest tests/performance",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:python": "pytest src/parser/tests/"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "hdl",
    "verilog",
    "systemverilog",
    "vhdl",
    "documentation",
    "ai",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/sqlite3": "^3.1.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}